<%= turbo_frame_tag(dom_id(product)) do %>
  <li class="flex flex-col md:flex-row mb-6 bg-white p-4 rounded shadow-sm">
    <%= image_tag(product.image_url, class: 'w-full md:w-40 h-auto object-contain mb-4 md:mb-0 md:mr-6 mx-auto') %>

    <div class="flex-1 text-center md:text-left">
      <h2 class="font-bold text-lg mb-3"><%= product.title %></h2>

      <p class="text-sm text-gray-700 mb-3">
        <%= sanitize(product.description) %>
      </p>

      <div class="mt-3 flex flex-col md:flex-row items-center md:items-start md:space-x-4">
        <div class="text-lg font-semibold mb-2 md:mb-0"><%= number_to_currency(product.price, raise: true) %></div>

        <%= button_to t('.add_html'),
            line_items_path(product_id: product, locale: I18n.locale),
            form_class: 'inline',
            class: 'rounded-lg py-2 px-3 text-white bg-green-600 w-full md:w-auto' %>
      </div>
    </div>
  </li>
<% end %>